<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        android:layout_centerHorizontal="true"
        app:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_launcher_background"

                />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/imgProduct"
                android:text="Product Name"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_btn_remove"
                android:backgroundTint="@color/white"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="10dp"
                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_btn_add"
                android:backgroundTint="@color/white"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/teal"
                android:layout_alignParentEnd="true"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Add to Cart"
                android:textSize="10sp"
                app:cornerRadius="0dp" />

            <TextView
                android:id="@+id/soldby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtName"
                android:layout_toRightOf="@id/imgProduct"
                android:text="Sold By: "
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtManufacturer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtName"
                android:layout_toRightOf="@id/soldby"
                android:text="Manufacturer"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtDollar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtManufacturer"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/imgProduct"
                android:text="$"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtManufacturer"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/txtDollar"
                android:text="00.00"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtDollar"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/imgProduct"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="12dp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>